<% include partials/header %>
    <script>document.body.classList.add('results-page');</script>

    <div class="container" style="max-width: 1200px;">
        <div class="results-header">
            <a href="/" class="back-link">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m12 19-7-7 7-7"></path>
                    <path d="M19 12H5"></path>
                </svg>
                Back to Search
            </a>
            <h1>Search Results</h1>
            <span class="results-count">
                <%= data["Search"].length %> movies found
            </span>
        </div>

        <% if(data["Search"].length===0) { %>
            <div class="glass-card text-center" style="padding: 3rem;">
                <p style="font-size: 3rem; margin-bottom: 1rem;">ðŸŽ¬</p>
                <h2 style="margin-bottom: 0.5rem;">No movies found</h2>
                <p class="subtitle">Try searching for something else</p>
            </div>
            <% } else { %>
                <div class="movies-grid">
                    <% data["Search"].forEach(function(movie) { %>
                        <div class="movie-card">
                            <% if(movie["Poster"] && movie["Poster"] !=="N/A" ) { %>
                                <img src="<%= movie['Poster'] %>" alt="<%= movie['Title'] %>" class="movie-poster">
                                <% } else { %>
                                    <div class="movie-poster no-poster">ðŸŽ¬</div>
                                    <% } %>
                                        <div class="movie-info">
                                            <h3 class="movie-title">
                                                <%= movie["Title"] %>
                                            </h3>
                                            <span class="movie-year">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14"
                                                    viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <rect width="18" height="18" x="3" y="4" rx="2" ry="2"></rect>
                                                    <line x1="16" x2="16" y1="2" y2="6"></line>
                                                    <line x1="8" x2="8" y1="2" y2="6"></line>
                                                    <line x1="3" x2="21" y1="10" y2="10"></line>
                                                </svg>
                                                <%= movie["Year"] %>
                                            </span>
                                            <% if(movie["Type"]) { %>
                                                <span class="movie-type">
                                                    <%= movie["Type"] %>
                                                </span>
                                                <% } %>
                                        </div>
                        </div>
                        <% }) %>
                </div>
                <% } %>

                    <a href="/" class="back-link mt-4">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.3-4.3"></path>
                        </svg>
                        Search Again
                    </a>
    </div>

    <% include partials/footer %>